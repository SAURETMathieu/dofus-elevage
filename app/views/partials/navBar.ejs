<header class="header">
  <div class="header__top">
    <div class="header__brand">
      <ul class="header__top-left">
        <li><a href="https://www.dofus.com/fr"><img class="ankama-img" src="/images/ankama.png" alt="logo ankama games"> </a></li>
        <li><a href="/support"><span class="nav-text">Support</span> <i class="fa-solid fa-envelope fa-sm"></i></a></li>
      </ul>
      <ul class="header__top-right">
        <% if (!locals.user) { %>
          <li><a href="/signin"><span class="nav-text">Connexion</span> <i class="fa-solid fa-right-to-bracket fa-sm"></i></a></li>
          <li><a href="/signup"><span class="nav-text">Inscription</span> <i class="fa-solid fa-user-plus fa-sm" ></i></a></li>  
        <% }else{ %>
          <% if(locals.user.role === "admin") { %>
            <li><a href="/admin"><span class="nav-text">Admin</span> <i class="fa-solid fa-user-tie fa-sm"></i></a></li> 
          <% }%>
          <li><a href="/profil"><span class="nav-text"><%=locals.user.pseudo.charAt(0).toUpperCase() + locals.user.pseudo.slice(1)%></span> <i class="fa-solid fa-address-card fa-sm nav-icon"></i></a></li>
          <li><a href="/signout"><span class="nav-text">Deconnexion</span> <i class="fa-solid fa-right-from-bracket fa-sm"></i> </a></li>  
        <% } %>
      </ul>
    </div>
  </div>
  <nav class="header__navbar">
    <div class="header__navbar-container">
      <img class="header__logo-dofus" src="/images/dofuslogo.png" alt="gros logo dofus">
      <div class="header__navbar-links">
        <ul class="header__navbar-left">
          <li>
            <a href="/">
              <span class="nav-text">
                Accueil
              </span>
              <span class="nav-icon">
                <i class="fa-solid fa-house fa-sm nav-icon"></i>
              </span>
            </a>
          </li>
          <li class="border-nav">
            <a href="/public">
              <span class="nav-text">
                Public 
              </span>
              <span class="nav-icon">
                <i class="fa-solid fa-lock-open fa-sm nav-icon"></i>
              </span>
            </a>
          </li>
          <li>
            <a href="/private">
              <span class="nav-text">
                Priv√©
              </span>
              <span class="nav-icon">
                <i class="fa-solid fa-lock fa-sm"></i>
              </span>
            </a>
          </li>
        </ul>
        <ul class="header__navbar-right">
          <li>
            <a href="/characters">
              <span class="nav-text">
                Persos 
              </span>
              <span class="nav-icon">
                <i class="fa-solid fa-user-group fa-sm"></i>
              </span>
            </a>
          </li>
          <li class="border-nav">
            <a href="/accounts">
              <span class="nav-text">
                Comptes 
              </span>
              <span class="nav-icon">
                <i class="fa-solid fa-address-book fa-sm"></i>
              </span>
            </a>
          </li>
          <li>
            <a href="/servers">
              <span class="nav-text">
                Serveurs
              </span>
              <span class="nav-icon">
                <i class="fa-solid fa-earth-americas fa-sm"></i>
              </span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
