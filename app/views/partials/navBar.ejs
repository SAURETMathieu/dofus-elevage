<header class="header">
  <div class="header__top">
    <div class="header__brand">
      <ul class="header__top-left">
        <li><a href="https://www.dofus.com/fr">Ankama </a></li>
        <li><a href="/support">Support <i class="fa-solid fa-envelope fa-sm nav-icon"></i></a></li>
      </ul>
      <ul class="header__top-right">
        <% if (!locals.user) { %>
          <li><a href="/signin">Connexion <i class="fa-solid fa-right-to-bracket fa-sm nav-icon"></i></a></li>
          <li><a href="/signup">Inscription <i class="fa-solid fa-user-plus fa-sm nav-icon" ></i></a></li>  
        <% }else{ %>
          <% if(locals.user.role === "admin") { %>
            <li><a href="/admin">Admin <i class="fa-solid fa-user-tie fa-sm nav-icon"></i></a></li> 
          <% }%>
          <li><a href="/profil"><%=locals.user.pseudo.charAt(0).toUpperCase() + locals.user.pseudo.slice(1)%> <i class="fa-solid fa-address-card fa-sm nav-icon"></i></a></li>
          <li><a href="/signout">Deconnexion <i class="fa-solid fa-right-from-bracket fa-sm nav-icon"></i> </a></li>  
        <% } %>
      </ul>
    </div>
  </div>
  <nav class="header__navbar">
    <div class="header__navbar-container">
      <img class="header__logo-dofus" src="/images/dofuslogo.png" alt="gros logo dofus">
      <div class="header__navbar-links">
        <ul class="header__navbar-left">
          <li><a href="/">Accueil <i class="fa-solid fa-house fa-sm nav-icon"></i></a></li>
          <li class="border-nav"><a href="/public">Public <i class="fa-solid fa-lock-open fa-sm nav-icon"></i></a></li>
          <li><a href="/private">Priv√©e <i class="fa-solid fa-lock fa-sm nav-icon"></i></a></li>
        </ul>
        <ul class="header__navbar-right">
          <li><a href="/characters">Persos <i class="fa-solid fa-user-group fa-sm nav-icon"></i></a></li>
          <li class="border-nav"><a href="/accounts">Comptes <i class="fa-solid fa-address-book fa-sm nav-icon"></i></a></li>
          <li><a href="/servers">Serveurs <i class="fa-solid fa-earth-americas fa-sm nav-icon"></i></a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>
