<div class="modal" id="updateModal" >
  <div class="modal-content modal-style-update">
    <span class="close close-modal-btn">&times;</span>
    <h2 class="modal__title">UPDATE</h2> 
    <div class="modal__body">
      <h3 class="modal__update-account-name">Profil</h3>
      <form id="updateForm" class="article__form">
        <div class="auth-container__input-container">
          <label class="auth-container__label" for="lastname">Nom* </label>
          <input class="sign" type="text" id="lastname" name="lastname" maxlength="30" required autocomplete="family-name">
        </div>
        <div class="auth-container__input-container">
          <label class="auth-container__label" for="firstname">Pr√©nom*</label>
          <input class="sign" type="text" id="firstname" name="firstname" maxlength="30" required autocomplete="given-name">
        </div>
        <div class="auth-container__input-container">
          <label class="auth-container__label" for="pseudo">Pseudo* </label>
          <input class="sign" type="text" id="pseudo" name="pseudo" maxlength="20" required>
        </div>
        <div class="auth-container__input-container">
          <label class="auth-container__label" for="email">Email* </label>
          <input type="email" id="email" name="email" required autocomplete="email">
        </div>
        <div class="auth-container__input-container">
          <label class="auth-container__label" for="password">
            Mot de passe*
          </label>
          <div class="password-input-container">
            <input type="password" class="password-input" id="password" name="password" required>
            <button type="button" class="password-toggle" id="togglePassword" aria-label="montrer/cacher le mot de passe">
              <i class="fas fa-eye-slash"></i>
            </button>
          </div>
        </div>
        <div class="auth-container__input-container">
          <label class="auth-container__label" for="passwordconfirm">
            Confirmation du mot de passe*
          </label>
          <div class="password-input-container">
            <input type="password" class="password-input" id="passwordconfirm" name="passwordconfirm" required>
            <button type="button" class="password-toggle" id="togglePasswordConfirm" aria-label="montrer/cacher le mot de passe de confirmation">
              <i class="fas fa-eye-slash"></i>
            </button>
          </div>
        </div>
        <div class="modal-submit-buttons">
          <input class="is-cancel" type="button" class="close-modal-btn" id="update-cancel" value="Annuler">
          <input class="submit is-success" id="update-submit" type="submit" value="Modifier">
        </div>
      </form>
    </div>
  </div>
</div>