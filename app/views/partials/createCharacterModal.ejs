<div class="modal" id="createModal" >
  <div class="modal-content modal-style-create">
    <span class="close close-modal-btn">&times;</span>
    <h2 class="modal__title">CREATE</h2> 
    <div class="modal__body">
      <h3 class="modal__create-account-name">Perso</h3>
      <form
      action="/characters/<%= locals.user ? locals.user.id : '16'%>/<%= locals.account.id %>"
      method="POST"
      class="article__form"
      >
        <div class="form__container__section">
          <section class="form__section-input-text">
            <label for="name">Nom</label>
            <input
              class="input-model"
              type="text"
              id="name"
              name="name"
              maxlength="20"
              required
            />
          </section>
          <section class="form__section-input-text">
            <label for="type">Enclos</label>
            <select class="height2 select-class" id="type" name="type" required>
              <option value="private" selected>Privée</option>
              <option value="public">Public</option>
            </select>
          </section>
        </div>

        <label for="classe">Classe</label>
        <select class="height2 select-class" id="classe" name="classe" required>
          <option value="enu" data-img="/images/enu.png">Enu</option>
          <option value="cra" data-img="/images/cra.png">Cra</option>
          <option value="iop" data-img="/images/iop.png">Iop</option>
          <option value="sadi" data-img="/images/sadi.png">Sadi</option>
          <option value="sacri" data-img="/images/sacri.png">Sacri</option>
          <option value="feca" data-img="/images/feca.png">Feca</option>
          <option value="panda" data-img="/images/panda.png">Panda</option>
          <option value="eni" data-img="/images/eni.png">Eni</option>
          <option value="osa" data-img="/images/osa.png">Osa</option>
          <option value="eca" data-img="/images/eca.png">Eca</option>
          <option value="sram" data-img="/images/sram.png">Sram</option>
          <option value="xelor" data-img="/images/xelor.png">Xelor</option>
        </select>
      
        <div class="genre-container">
          <section class="section-genre">
            <h2><i class="fa-solid fa-mars fa-sm" style="color: #1d5ac3;"></i></h2>
            <label for="aucune-m">Aucune</label>
            <input
              type="radio"
              id="aucune-m"
              name="speMale"
              value="aucune"
              checked
              required
            />
            <label for="repro-m">Repro</label>
            <input type="radio" id="repro-m" name="speMale" value="repro" />
            <label for="came-m">Camé</label>
            <input type="radio" id="came-m" name="speMale" value="camé" />
            <div class="open-breed" id="open-breed-male">+</div>
          </section>
          <section class="section-genre">
            <h2><i class="fa-solid fa-venus fa-sm" style="color: #fb63fd;"></i></h2>
            <label for="aucune-f">Aucune</label>
            <input
              type="radio"
              id="aucune-f"
              name="speFemale"
              value="aucune"
              checked
              required
            />
            <label for="repro-f">Repro</label>
            <input type="radio" id="repro-f" name="speFemale" value="repro" />
            <label for="came-f">Camé</label>
            <input type="radio" id="came-f" name="speFemale" value="camé" />
            <div class="open-breed" id="open-breed-female">+</div>
          </section>
          <input
            id="breed-male-value"
            type="hidden"
            name="breedMale"
            required
          />
          <input
            id="breed-female-value"
            type="hidden"
            name="breedFemale"
            required
          />
        </div>
      
        <div class="modal-submit-buttons">
          <input class="is-cancel" type="button" class="close-modal-btn" id="cancel" value="Annuler">
          <input class="submit is-success" id="submit" type="submit" value="Ajouter">
        </div>
      </form>
    </div>

    <div class="breed-list hidden" id="breed-list">
      <h2 class="modal__title">RACES</h2> 
      
      <div class="search-container breed-select">
        <div class="search-box">
        <button class="btn-search"><i class="fas fa-search"></i></button>
          <input 
            class="input-search" 
            type="search" 
            id="search-dd"
            name="search"
            maxlength="20"
            placeholder="Recherche par race"
            required
          />
          <span class="clear-search">&times;</span>
        </div>
      </div>

      <section class="section-breed">

        <% for (let index = 1; index < 11; index++) {%>
          <div class="stade-container">
            <h3>Stade <%=index%></h3>
            <div class="stade__breed-container create" data-stade="<%=index%>"></div>
          </div>
        <%}%>
      
        <% breeds.forEach(breed => { %>
          <figure data-color="<%= breed.color%>" data-id="<%= breed.id%>" data-stade="<%= breed.stade%>" class="figure-dd">
            <img class="image-dd" src="<%= breed.image%>" alt="Dragodinde <%= breed.color%>">
            <figcaption><%= breed.name %></figcaption>
          </figure>
        <% }) %>
      </section>
      <div class="modal-submit-buttons">
        <input class="is-cancel input-submit" type="button" id="close-breed" value="Annuler">
      </div>
    </div>

  </div>
</div>
