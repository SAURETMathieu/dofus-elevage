<%- include('./partials/header'); -%>
<main class="main__index">
  <div class="register-container">
    <h1 class="inscription__title">Inscription</h1>
    <div class="img-dofus-container">
      <img src="/images/ebene.png" draggable="false" alt="dofus ebene">
      <img src="/images/ivoire.png" draggable="false" alt="dofus ivoire">
      <img src="/images/ocre.png" draggable="false" alt="dofus ocre">
      <img src="/images/vulbis.png" draggable="false" alt="dofus vulbis">
      <img src="/images/pourpre.png" draggable="false" alt="dofus pourpre">
      <img src="/images/turquoise.png" draggable="false" alt="dofus turquoise">
      <img src="/images/emeraude.png" draggable="false" alt="dofus emeraude">
    </div>
    <form action="/signup" method="POST">
      <div class="container-input">
        <label class="label-lastname" for="lastname">Nom* </label>
        <input type="lastname" id="lastname" name="lastname" required>
      </div>
      <div class="container-input">
        <label class="label-firstname" for="firstname">Pr√©nom*</label>
        <input type="firstname" id="firstname" name="firstname" required>
      </div>
      <div class="container-input">
        <label class="label-pseudo" for="pseudo">Pseudo* </label>
        <input type="pseudo" id="pseudo" name="pseudo" required>
      </div>
      <div class="container-input">
        <label class="label-email" for="email">Email* </label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="container-input">
        <label class="label-password" for="password">Mot de passe* </label>
        <input type="password" id="password" name="password" required>
      </div>
      <div class="container-input">
        <label class="label-password" for="passwordconfirm">Confirmation du mot de passe*</label>
        <input type="password" id="passwordconfirm" name="passwordConfirm" required>
      </div>
      <button class="input-submit" type="submit">S'inscrire</button>
    </form>
  </div>
</main>
<%- include('./partials/footer'); -%>