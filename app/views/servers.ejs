<%- include('./partials/header'); -%>
<main class="servers__main">
  <h1 class="h1-user-page">Serveurs</h1>
  
  <div class="container-list">
    <% locals.servers.forEach(server => { %>
      <article class="article__server">
        <div class="article__title-server"><h2><%= server.name %></h2></div>
        <img class="logo__server" src="/images/<%= server.img %>" alt="image du serveur">
        <a href="/accounts?server=<%= server.id%>"><input class="input-form" type="button" value="Mes comptes"></a>
        <a href="/naissances?server=<%= server.id%>"><input class="input-form" type="button" value="Mes naissances"></a>
      </article>
    <% }) %>
  </div>
</main>
<%- include('./partials/footer'); -%>